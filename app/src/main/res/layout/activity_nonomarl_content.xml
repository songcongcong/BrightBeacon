<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_title_header">

    <include
        android:id="@+id/normal_header"
        layout="@layout/title_back_header" />

    <RelativeLayout
        android:id="@+id/rl_error_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_below="@id/normal_header"
        android:background="@color/log_colot">

        <ImageView
            android:id="@+id/iv_note"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@mipmap/iv_user_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@id/iv_note"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_error_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="异常：电源开关"
                android:textColor="@color/color_white"
                android:textSize="@dimen/x18" />

            <TextView
                android:id="@+id/tv_error_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="描述：电源开关有问题，需及时检修"
                android:textColor="@color/color_white"
                android:textSize="@dimen/x14" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_error_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现场照片："
            android:textSize="@dimen/x18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请查看现场照片"
            android:textSize="@dimen/x14" />
    </LinearLayout>


    <View
        android:id="@+id/view_error"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_below="@id/ll_content"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/color_lien" />

    <View
        android:id="@+id/view_error_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_below="@id/view_error"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/color_lien" />

    <TextView
        android:id="@+id/textview_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_error_top"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y20"
        android:text="现场照片"
        android:textSize="@dimen/x16" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/textview_picture"
        android:id="@+id/revyvleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginBottom="@dimen/y90"/>

    <TextView
        android:id="@+id/tv_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y50"
        android:background="@drawable/region_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/x120"
        android:paddingTop="@dimen/y10"
        android:paddingRight="@dimen/x120"
        android:paddingBottom="@dimen/y10"
        android:text="返回"
        android:textColor="@color/color_white"
        android:textSize="@dimen/x18" />

</RelativeLayout>