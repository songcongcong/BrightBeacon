<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/y30">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/error_img"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/y80"
        fresco:roundedCornerRadius="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"/>

    <TextView
        android:id="@+id/error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/y10"
        android:layout_toRightOf="@id/error_img"
        android:text="电源异常"
        android:textColor="@color/color_see"
        android:textSize="@dimen/x16" />

    <TextView
        android:id="@+id/error_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/error_title"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/y20"
        android:layout_toRightOf="@id/error_img"
        android:text="电源开关有问题，需及时检修"
        android:textSize="@dimen/x14" />

    <TextView
        android:id="@+id/error_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginTop="@dimen/y20"
        android:background="@drawable/region_bg"
        android:paddingLeft="@dimen/x15"
        android:paddingTop="@dimen/y5"
        android:paddingRight="@dimen/x15"
        android:paddingBottom="@dimen/y5"
        android:text="异常详情"
        android:textColor="@color/color_white"
        android:textSize="@dimen/x12"
        android:layout_marginRight="@dimen/x10"/>
</RelativeLayout>