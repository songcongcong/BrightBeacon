<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.InspectionDetailsActivity">

    <include
        android:id="@+id/detail_header"
        layout="@layout/title_back_header" />

    <View
        android:id="@+id/iv_liean"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_below="@id/detail_header"
        android:background="@mipmap/iv_detail_header" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_liean"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginBottom="@dimen/y100"></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_detail_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y50"
        android:background="@drawable/region_detail_bg"
        android:paddingLeft="@dimen/x50"
        android:paddingTop="@dimen/y10"
        android:paddingRight="@dimen/x50"
        android:paddingBottom="@dimen/y10"
        android:text="区域巡检完成"
        android:textColor="@color/color_white"
        android:textSize="@dimen/x18" />
</RelativeLayout>