<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_title_header"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relay_back"
        android:layout_width="@dimen/x25"
        android:layout_height="@dimen/x25"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_header_back"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_centerVertical="true"
            android:background="@mipmap/iv_back" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_back_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_lien"
        android:layout_below="@id/tv_back_header"/>
</RelativeLayout>